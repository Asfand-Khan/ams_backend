model ProjectComment {
  id          Int      @id @default(autoincrement())
  project_id  Int
  employee_id Int
  comment     String   @db.LongText
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  is_active   Boolean  @default(true)

  project  Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  employee Employee @relation(fields: [employee_id], references: [id])

  @@index([project_id])
  @@index([employee_id])
}

model Task {
  id             Int           @id @default(autoincrement())
  project_id     Int
  title          String        @db.VarChar(200)
  description    String?       @db.Text
  priority       Priority      @default(medium)
  duration_type  DurationType? // hour / day / minute
  duration_value Int? // number of units
  status_id      Int
  created_by     Int
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  project Project          @relation(fields: [project_id], references: [id])
  creator Employee         @relation(fields: [created_by], references: [id])
  status  TaskStatusMaster @relation(fields: [status_id], references: [id])

  assignments TaskAssignment[]
  comments    TaskComment[]
  statusLogs  TaskStatusLog[]
}

model TaskAssignment {
  id          Int              @id @default(autoincrement())
  task_id     Int
  assigned_to Int
  assigned_by Int
  status      AssignmentStatus @default(active)
  assigned_at DateTime         @default(now())
  revoked_at  DateTime?

  task     Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  assignee Employee @relation("TaskAssignee", fields: [assigned_to], references: [id])
  assigner Employee @relation("TaskAssigner", fields: [assigned_by], references: [id])
}

model TaskStatusLog {
  id            Int      @id @default(autoincrement())
  task_id       Int
  old_status_id Int?
  new_status_id Int
  changed_by    Int
  changed_at    DateTime @default(now())

  task Task @relation(fields: [task_id], references: [id], onDelete: Cascade)

  old_status TaskStatusMaster? @relation("OldStatus", fields: [old_status_id], references: [id])
  new_status TaskStatusMaster  @relation("NewStatus", fields: [new_status_id], references: [id])

  changedBy Employee @relation("TaskStatusChangedBy", fields: [changed_by], references: [id])

  @@index([task_id])
  @@index([changed_by])
}

model TaskComment {
  id          Int      @id @default(autoincrement())
  task_id     Int
  employee_id Int
  comment     String   @db.LongText
  created_at  DateTime @default(now())
  status_id   Int? // Optional: status at time of comment

  task     Task              @relation(fields: [task_id], references: [id], onDelete: Cascade)
  employee Employee          @relation(fields: [employee_id], references: [id])
  status   TaskStatusMaster? @relation("CommentOnStatus", fields: [status_id], references: [id])

  @@index([task_id])
  @@index([employee_id])
}

model Ticket {
